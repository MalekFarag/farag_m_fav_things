            <p class="popSongs">{{trippie.songs}}</p>
            <h4 class="descHead">Artist Bio</h4>
            <p class="desc">{{trippie.description}}</p>
        </div>
    </div>

    <div class="thingSec gameSec">
        <h2>Video Games</h2>
        <div class="menu">
            <div class="menuItem siege"></div>
            <div class="menuItem minecraft"></div>
            <div class="menuItem rocket"></div>
        </div>

        <div class="data siege">
            <h3 class="name">{{siege.name}}</h3>
            <p class="genre">{{siege.genre}}</p>
            <img src="images/{{siege.image}}" class="images">
            <p class="date">{{siege.date}}</p>
            <h4 class="descHead">Game Description</h4>
            <p class="desc">{{siege.description}}</p>
        </div>
        <div class="data minecraft hidden">
            <h3 class="name">{{minecraft.name}}</h3>
            <p class="genre">{{minecraft.genre}}</p>
            <img src="images/{{minecraft.image}}" class="images">
            <p class="date">{{minecraft.date}}</p>
