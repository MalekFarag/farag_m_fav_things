<main class="pageHome">
    <h1 class="hidden">Home page</h1>

    {{!-- add title screen --}}

    <div class="thingSec musicSec">
        <h2>Music</h2>
        <div class="menu">
            <div class="menuItem cordae"></div>
            <div class="menuItem gravy"></div>
            <div class="menuItem trippie"></div>
        </div>

        <div class="data cordae">
            <h3 class="name">{{cordae.name}}</h3>
            <p class="genre">{{cordae.genre}}</p>
            <img src="images/{{cordae.image}}" class="images">
            <h4 class="songs">Popular Songs</h4>
            <p class="popSongs">{{cordae.songs}}</p>
            <h4 class="descHead">Artist Bio</h4>
            <p class="desc">{{cordae.description}}</p>
        </div>
        <div class="data gravy hidden">
            <h3 class="name">{{gravy.name}}</h3>
            <p class="genre">{{gravy.genre}}</p>
            <img src="images/{{gravy.image}}" class="images">
            <h4 class="songs">Popular Songs</h4>
            <p class="popSongs">{{gravy.songs}}</p>
            <h4 class="descHead">Artist Bio</h4>
            <p class="desc">{{gravy.description}}</p>
        </div>
        <div class="data trippie hidden">
            <h3 class="name">{{trippie.name}}</h3>
            <p class="genre">{{trippie.genre}}</p>
            <img src="images/{{trippie.image}}" class="images">
