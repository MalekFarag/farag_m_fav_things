            <h4 class="descHead">Game Description</h4>
            <p class="desc">{{rocket.description}}</p>
        </div>
    </div>

    <div class="thingSec activitySec">
        <h2>Activities</h2>
        <div class="menu">
            <div class="menuItem fest"></div>
            <div class="menuItem kayak"></div>
            <div class="menuItem soccer"></div>
        </div>

        <div class="data fest">
            <h3 class="name">{{fest.name}}</h3>
            <p class="genre">{{fest.genre}}</p>
            <img src="images/{{fest.image}}" class="images">
            <h4 class="descHead">Description</h4>
            <p class="desc">{{fest.description}}</p>
        </div>
        <div class="data kayak hidden">
